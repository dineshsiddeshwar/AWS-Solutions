{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "metadata":{
    "description":"ARM template to deploy Azure Backup Vault with immutability setting disabled"
  },
  "contentVersion": "1.0.0.0",
  "parameters": {
    "backupVaultName": {
      "defaultValue": "backupVaulttest-2",
      "type": "String",
      "metadata":{
        "description":"Name of the Azure Backup Vault"
      }
    },
    "backupVaultLocation": {
      "defaultValue": "East US",
      "type": "String",
      "metadata":{
        "description":"Location of the Azure Backup Vault"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DataProtection/backupVaults",
      "apiVersion": "2022-11-01-preview",
      "name": "[parameters('backupVaultName')]",
      "location": "[parameters('backupVaultLocation')]",
      "properties": {
        "securitySettings": {
          "immutabilitySettings": {
            "state": "Disabled"
          },
          "softDeleteSettings": {
            "retentionDurationInDays": "30",
            "state": "AlwaysOn"
          }
        },
        "storageSettings": [
          {
            "datastoreType": "VaultStore",
            "type": "GeoRedundant"
          }
        ]
      }
    }
  ]
}