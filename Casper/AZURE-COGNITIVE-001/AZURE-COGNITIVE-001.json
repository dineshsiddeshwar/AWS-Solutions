{
    "properties": {
        "displayName": "Limit Azure Cognitive services to approved kinds.",
        "policyType": "Custom",
        "description": "Azure Cognitive services should be limited to approved kinds",
        "metadata": {
            "version": "1.0.0",
            "category": "Azure Cognitive"
        },
        "parameters": {
            "AZURE-COGNITIVE-001-effect": {
                "type": "String",
                "metadata": {
                    "displayName": "AZURE-COGNITIVE-001-effect",
                    "description": "Effect of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Deny"
            }
        },
        "mode": "All",
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.CognitiveServices/accounts"
                    },
                    {
                        "field": "kind",
                        "equals": "OpenAI"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('AZURE-COGNITIVE-001-effect')]"
            }
        }
    }
}