{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": " ARM template to deploy APP Config with Local authentication methods disabled"
  },
  "parameters": {
    "resName": {
      "type": "string",
      "defaultValue": "APPCONFIG-002",
      "metadata": {
        "description": "Name of the ARM Template"
      }
    },
    "resSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "standard"
      ],
      "metadata": {
        "description": "App Config resource sku"
      }
    },
    "resLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "App Config resource location"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.AppConfiguration/configurationStores",
      "apiVersion": "2023-03-01",
      "name": "[parameters('resName')]",
      "location": "[parameters('resLocation')]",
      "sku": {
        "name": "[parameters('resSku')]"
      },
      "properties": {
        "disableLocalAuth": true,
        "publicNetworkAccess": "Disabled"
      }
    }
  ]
}