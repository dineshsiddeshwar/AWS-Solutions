{
    "Version": "2012-10-17",
    "Id": "ExamplePolicy01",
    "Statement": [
        {
            "Sid": "EFS least privileged model Access",
            "Effect": "Allow",
            "Principal": {
                "AWS": "${efs_access_role}"
            },
            "Resource": "${efs_arn}",
            "Action": [
                "elasticfilesystem:ClientMount",
                "elasticfilesystem:ClientWrite"
            ]
        },
        {
            "Sid": "Deny EFS access from anywhere except VPC Endpoint",
            "Effect": "Deny",
            "Principal": {
                "AWS": "*"
            },
            "Resource": "${efs_arn}",
            "Action": [
                "*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:sourceVpce": "${vpc_endpoint_id}"
                }
            }
        },
        {
            "Sid": "Deny Root File system access",
            "Effect": "Deny",
            "Principal": {
                "AWS": "*"
            },
            "Resource": "${efs_arn}",
            "Action": [
                "elasticfilesystem:ClientRootAccess"
            ]
        },
        {
            "Sid": "Deny EFS access if connection is not TLS1.2",
            "Effect": "Deny",
            "Principal": {
                "AWS": "*"
            },
            "Resource": "${efs_arn}",
            "Action": [
                "*"
            ],
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "false"
                }
            }
        }
    ]
}
