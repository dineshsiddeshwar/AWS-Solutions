{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "EnableAnotherAWSAccountToReadTheSecret",
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::${account_id}:root"
        },
        "Action": "secretsmanager:GetSecretValue",
        "Resource": "*"
      }
    ]
  }
  