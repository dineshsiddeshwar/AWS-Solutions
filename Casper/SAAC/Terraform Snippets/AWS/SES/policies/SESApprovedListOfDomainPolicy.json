{
    "Version": "2012-10-17",
    "Id": "SES Authorization Policy",
    "Statement": [
        {
            "Sid": "AuthorizerAccount",
            "Effect": "Allow",
            "Principal": {
                "AWS": "*"
            },
            "Action": [
                "ses:SendEmail",
                "ses:SendRawEmail"
            ],
            "Resource": "${ses_resource_arn}",
            "Condition": {
                "StringEquals": {
                    "aws:PrincipalOrgID": "${ses_principal_org_id}"
                },
                "ForAnyValue:StringLike": {
                    "ses: Recipients": [
                        "${ses_list_of_recipients}"
                    ]
                }
            }
        }
    ]
}
