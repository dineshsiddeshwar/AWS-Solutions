{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "LeastPrivilegeAccess",
            "Principal": "${athena_principal_arn}",
            "Effect": "Allow",
            "Action": [
                "glue:CreateDatabase",
                "glue:GetDatabase"
                               
            ],
            "Resource": [
                "${athena_resource_arn}"
            ]
        },
        {
            "Sid": "Deny Athena access from anywhere except VPC Endpoint",
            "Effect": "Deny",
            "Principal": {
                "AWS": "*"
            },
            "Resource": "${athena_resource_arn}",
            "Action": [
                "*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:sourceVpce": "${vpc_endpoint_id}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "glue:GetDatabase",
                "glue:GetTables"
                
            ],
            "Resource": [
                "${athena_resource_arn}"
            ]
        }
    ]
}
