{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "s3:GetBucketAcl",
      "Effect": "Allow",
      "Principal": [
        {
          "Service": "cloudtrail.amazonaws.com"
        }
      ],
      "Resource": "${lakeformation_trail_s3_bucket_arn}",
      "Sid": "AWSCloudTrailAclCheck"
    },
    {
      "Action": "s3:PutObject",
      "Condition": [
        {
          "StringEquals": [
            {
              "s3:x-amz-acl": "bucket-owner-full-control"
            }
          ]
        }
      ],
      "Effect": "Allow",
      "Principal": [
        {
          "Service": "cloudtrail.amazonaws.com"
        }
      ],
      "Resource": "${lakeformation_trail_s3_bucket_arn}/*",
      "Sid": "AWSCloudTrailAclCheck"
    }
  ]
}
