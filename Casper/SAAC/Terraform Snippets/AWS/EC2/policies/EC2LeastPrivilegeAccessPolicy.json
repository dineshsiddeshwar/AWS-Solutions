{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2 : DescribeInstances",
                "ec2 : DescribeImages",
                "ec2 : DescribeKeyPairs",
                "ec2 : CreateKeyPair",
                "ec2 : DescribeVpcs",
                "ec2 : DescribeSubnets",
                "ec2 : DescribeSecurityGroups",
                "ec2 : CreateSecurityGroup",
                "ec2 : AuthorizeSecurityGroupIngress"
            ],
            "Resource": "arn:aws:ec2:${ec2_region}::/*"
        },
        {
            "Effect": "Allow",
            "Action": "ec2:RunInstances",
            "Resource": [
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: network-interface/*",
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: volume/*",
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: key-pair/*",
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: security-group/*",
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: subnet/${ec2_subnet_id}"
            ]
        },
        {
            "Effect": "Allow",
            "Action": "ec2:RunInstances",
            "Resource": [
                "arn:aws:ec2:${ec2_region}:${ec2_account_id}: instance/*"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2: InstanceType": "t2.micro"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": "ec2:RunInstances",
            "Resource": [
                "arn:aws:ec2:${ec2_region}:: image/ami-*"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2: Owner": "amazon"
                }
            }
        }
    ]
}
