{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "glacier:CreateVault",
          "glacier:DescribeVault",
          "glacier:ListVaults"
        ],
        "Resource": "arn:aws:glacier:${aws_region}:${account_id}:vaults/${vault_name}"
      }
    ]
  }
  