{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "execute-api:Invoke",
      "Resource": "${execution_arn}",
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "${api_gateway_ip_address}"
        }
      }
    }
  ]
}
