{
    "properties": {
        "displayName": "Immutability must be enabled for backup vaults.",
        "policyType": "BuiltIn",
        "description": "Azure Backup Vault must have Immutability enabled",
        "metadata": {
            "version": "1.0.0",
            "category": "Azure Backup Vault"
        },
        "parameters": {
            "AZURE-BACKUPVAULT-001-effect": {
                "type": "String",
                "metadata": {
                    "displayName": "AZURE-BACKUPVAULT-001-effect",
                    "description": "Effect of the policy"
                },
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Audit"
            }
        },
        "mode": "All",
        "policyRule": { 
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.DataProtection/backupVaults"
                    },
                    { 
                        "anyof": [
                            {
                                "field": "Microsoft.DataProtection/backupVaults/securitySettings.immutabilitySettings.state",
                                "notIn": [
                                    "Locked",
                                    "Unlocked"
                                ]
                            },
                            {
                                "field": "Microsoft.DataProtection/backupVaults/securitySettings.immutabilitySettings.state",
                                "notEquals": "Locked"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "[parameters('AZURE-BACKUPVAULT-001-effect')]"
            }
        }
    }
}