{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "kms:Encrypt*",
                "kms:Decrypt*",
                "kms:ReEncrypt*",
                "kms:GenerateDataKey*",
                "kms:Describe*"
            ],
            "Resource": "*",
            "Effect": "Allow",
            "Principal":{
                "Service":["sns.amazonaws.com","logs.amazonaws.com"]
            },
            "Condition": {
                "ArnEquals":{
                    "kms:EncryptionContext:aws:logs:arn": "arn:aws:logs:us-east-1:${account_id}:log-group:SO0111-SHARR-*"
                }
            }
        },
        {
            "Action": "kms:*",
            "Resource": "*",
            "Effect": "Allow",
            "Principal":{
                "AWS": "arn:aws:iam::${account_id}:root"
            }
        }
    ]
}

